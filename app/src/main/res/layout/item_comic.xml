<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/linear_layout_padding">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        app:cardCornerRadius="@dimen/card_view_cardCornerRadius"
        app:cardElevation="@dimen/card_view_elevation">

        <ImageView
            android:id="@+id/imgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvChapter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_view_tvChapter_height"
            android:layout_gravity="bottom"
            android:background="@color/text_view_tvChapter_background"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_view_tvChapter_textSize"
            tools:ignore="SmallSp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/text_view_tvName_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/text_view_tvName_textSize" />

</LinearLayout>